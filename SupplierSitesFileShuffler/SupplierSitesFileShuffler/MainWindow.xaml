<Controls:MetroWindow x:Class="Renamer.MainWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      xmlns:local="clr-namespace:Renamer"
                      xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                      mc:Ignorable="d"
                      Title="MainWindow"
                      Height="480"
                      Width="700">
    <Grid Margin="0,0,0,0">
        <!--Background='#FFDADADA'>-->
        <Grid.RowDefinitions>

            <RowDefinition Height='47' />
            <RowDefinition Height="315*" />
            <RowDefinition Height='52*' />
            <RowDefinition Height="35" />
        </Grid.RowDefinitions>
        <TextBlock TextWrapping="NoWrap"
                   Text="DROP YOUR FILES BELOW TO UPLOAD THEM"
                   FontSize="24"
                   RenderTransformOrigin="0.597,0.505"
                   HorizontalAlignment="Left"
                   Width="612"
                   Margin="10,4,0,15"
                   Grid.Row='0' />

        <StatusBar Grid.Row="3"
                   Height="22"
                   VerticalAlignment="Bottom">
            <StatusBar.ItemsPanel>
                <ItemsPanelTemplate>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto"
                                              MinWidth="100" />
                        </Grid.ColumnDefinitions>
                    </Grid>
                </ItemsPanelTemplate>
            </StatusBar.ItemsPanel>
            <StatusBarItem FontSize='13.333'
                           Margin='0,-12,-90,0'
                           HorizontalAlignment='Right'
                           Width='622'>
                <TextBlock Name="StatusIndicator"></TextBlock>
            </StatusBarItem>
            <StatusBarItem Grid.Column="0" />
        </StatusBar>
        <DataGrid x:Name='dataGrid'
                  HorizontalAlignment='Left'
                  Margin='10,10,0,0'
                  Grid.Row='1'
                  VerticalAlignment='Top'
                  Height='302'
                  Width='672'
                  AutoGenerateColumns='False'
                  AllowDrop='True'
                  Drop="DropBox_Drop"
                  DragOver="DropBox_DragOver"
                  DragLeave="DropBox_DragLeave"
                  BorderBrush="#FF111A23"
                  GridLinesVisibility="Horizontal"
                  FontSize="14"
                  Style="{StaticResource AzureDataGrid}">
            <DataGrid.Columns>

                <DataGridTextColumn Header=' Part Number'
                                    Binding='{Binding PartNo}' />
                <DataGridTextColumn Header=' File Size'
                                    Binding='{Binding FileSize}' />
                <DataGridCheckBoxColumn ElementStyle="{DynamicResource MetroDataGridCheckBox}"
                                        EditingElementStyle="{DynamicResource MetroDataGridCheckBox}"
                                        Header='Site Found'
                                        Binding='{Binding SiteFound}' />
                <DataGridTextColumn Header='Supplier'
                                    Binding='{Binding Supplier}' />
                <DataGridTextColumn Header='Version'
                                    Binding='{Binding Version}' />
                <DataGridTextColumn Header='Status'
                                    Binding='{Binding Status}' />
            </DataGrid.Columns>
        </DataGrid>

        <Button x:Name='clear_button'
                Content='Clear Content'
                Style="{StaticResource AccentedSquareButtonStyle}"
                HorizontalAlignment='Left'
                Margin='185,10,0,0'
                Grid.Row='2'
                VerticalAlignment='Top'
                Width='115'
                Click='clear_button_Click'
                Height='32'
                FontSize="13.333" />
        <Button x:Name='send_button'
                Style="{StaticResource AccentedSquareButtonStyle}"
                Content='Send to supplier sites'
                HorizontalAlignment='Left'
                Margin='316,10,0,0'
                Grid.Row='2'
                VerticalAlignment='Top'
                Width='181'
                Click='send_button_Click'
                Height='32'
                FontSize="16" />
    </Grid>

</Controls:MetroWindow>
